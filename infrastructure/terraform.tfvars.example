# Copy this file to terraform.tfvars and fill in your values

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# Optional: Override default region and zone
region = "us-central1"
zone   = "us-central1-a"

# Celery configuration (Redis URLs for dispatcher/worker)
celery_broker_url      = "redis://redis-hostname:6379/0"
celery_result_backend  = "redis://redis-hostname:6379/1"

# Optional: Environment name
environment = "dev"

# Optional: Firestore settings
firestore_location   = "us-central"
firestore_collection = "topic_subscriptions"

# Optional: Custom domain name (if you have one)
# domain_name = "yourdomain.com"

# Required: API Keys
serper_api_key = "your-serper-api-key"
google_ai_api_key = "your-google-ai-api-key"

# Optional: Docker image URIs (leave empty to use default naming)
# backend_image  = "gcr.io/your-project/perplexity-clone-backend:latest"
# frontend_image = "gcr.io/your-project/perplexity-clone-frontend:latest"
# dispatcher_image = "gcr.io/your-project/perplexity-clone-dispatcher:latest"
# worker_image     = "gcr.io/your-project/perplexity-clone-worker:latest"

# Optional: Memorystore sizing
redis_tier            = "BASIC"
redis_memory_size_gb  = 1

# Cloud Scheduler configuration
scheduler_schedule       = "0 9 * * 1" # Every Monday at 09:00
scheduler_time_zone      = "Etc/UTC"
scheduler_dispatcher_uri = "https://your-dispatcher-url.run.app"
