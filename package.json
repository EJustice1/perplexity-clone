{
  "name": "perplexity-clone",
  "version": "1.0.0",
  "description": "Interactive Search Engine with Frontend and Backend",
  "private": true,
  "scripts": {
    "test": "./run-tests.sh",
    "test:concurrent": "./run-tests.sh concurrent",
    "test:sequential": "./run-tests.sh sequential",
    "test:backend": "./run-tests.sh backend",
    "test:frontend": "./run-tests.sh frontend",
    "test:help": "./run-tests.sh help",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python3.11 -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && python3.11 -m pip install -e .",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python3.11 -m uvicorn src.main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run start",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && python3.11 -m flake8 src/ && python3.11 -m mypy src/",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && python3.11 -m pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
