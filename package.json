{
  "name": "perplexity-clone",
  "version": "1.0.0",
  "description": "A modern AI-powered search application with FastAPI backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run backend:build && npm run frontend:build",
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "install:all": "npm run backend:install && npm run frontend:install",
    "test": "npm run backend:test && npm run frontend:test",
    "lint": "npm run backend:lint && npm run frontend:lint",
    "clean": "npm run backend:clean && npm run frontend:clean",
    "backend:dev": "cd backend && uvicorn src.api.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:build": "cd backend && docker build -t perplexity-backend .",
    "backend:start": "cd backend && uvicorn src.api.main:app --host 0.0.0.0 --port 8000",
    "backend:install": "cd backend && pip install -e .",
    "backend:test": "cd backend && pytest",
    "backend:lint": "cd backend && black src/ && isort src/ && flake8 src/ && mypy src/",
    "backend:clean": "cd backend && find . -type d -name __pycache__ -exec rm -rf {} + && find . -type f -name '*.pyc' -delete",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "frontend:install": "cd frontend && npm install",
    "frontend:test": "cd frontend && npm test",
    "frontend:lint": "cd frontend && npm run lint",
    "frontend:clean": "cd frontend && rm -rf .next out",
    "infrastructure:up": "cd infrastructure/docker && docker-compose up -d",
    "infrastructure:down": "cd infrastructure/docker && docker-compose down",
    "infrastructure:logs": "cd infrastructure/docker && docker-compose logs -f",
    "monitoring:setup": "cd infrastructure/monitoring && ./setup-monitoring.sh",
    "docker:build": "npm run backend:build && cd frontend && docker build -t perplexity-frontend .",
    "docker:up": "npm run infrastructure:up",
    "docker:down": "npm run infrastructure:down"
  },
  "keywords": [
    "ai",
    "search",
    "fastapi",
    "nextjs",
    "typescript",
    "docker",
    "monitoring",
    "middleware",
    "microservices"
  ],
  "author": "Perplexity Clone Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/perplexity-clone.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/perplexity-clone/issues"
  },
  "homepage": "https://github.com/your-org/perplexity-clone#readme"
}
